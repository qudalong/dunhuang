<view class="input-group">
	<view class="input relative">
		<image class="l-icon" src="/images/icon_tel.png"></image>
		<input type="text" placeholder="请输入手机号或用户名" />
	</view>
	<view class="input relative">
		<image class="l-icon" src="/images/icon_tel.png"></image>
		<input type="text" placeholder="请输入验证码" />
		<view class="getCode c">获取验证码</view>
	</view>
	<view class="input relative">
		<image class="l-icon" src="/images/icon_pwd.png"></image>
		<input type="{{encry?'password':'text'}}" placeholder="请输入新密码" />
		<image bindtap='changeShow' class="icon_eye" src="/images/{{encry?'icon_eye_close.png':'icon_eye.png'}}"></image>
	</view>
	<view class="input relative">
		<image class="l-icon" src="/images/icon_pwd.png"></image>
		<input type="{{encry?'password':'text'}}" placeholder="请确认新密码" />
		<image bindtap='changeShow' class="icon_eye" src="/images/{{encry?'icon_eye_close.png':'icon_eye.png'}}"></image>
	</view>
</view>
<view class="btn hover">确认</view>
<view class="tip">
	敦煌市新时代文明实践中心主办
</view>
